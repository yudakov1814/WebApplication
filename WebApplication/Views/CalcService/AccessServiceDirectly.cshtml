@inject WebApplication.Services.CalcService CalcService

<h1>@ViewData["Title"]</h1>

<dl class="row">
    <dt class="col-3">
        Первое число
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@CalcService.First</span>
    </dd>
    <dt class="col-3">
        Второе число
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@CalcService.Second</span>
    </dd>
    <dt class="col-3">
        Сумма чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@CalcService.First + @CalcService.Second = @CalcService.Sum</span>
    </dd>
    <dt class="col-3">
        Разность чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@CalcService.First - @CalcService.Second = @CalcService.Sub</span>
    </dd>
    <dt class="col-3">
        Произведение чисел
    </dt>
    <dd class="col-9">
        <span class="badge badge-light">@CalcService.First * @CalcService.Second = @CalcService.Mult</span>
    </dd>
    <dt class="col-3">
        Частное чисел
    </dt>
    <dd class="col-9">
        @if (CalcService.Div == -1)
        {
            <span class="badge badge-light">знаменатель равен нулю</span>
        }
        else
        {
            <span class="badge badge-light">@CalcService.First / @CalcService.Second = @CalcService.Div</span>
        }
    </dd>
</dl>