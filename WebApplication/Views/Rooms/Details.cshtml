@model WebApplication.Models.Room

@{
    ViewData["Title"] = "Details";
    var linkTemplate = "<a href='TLink'>TName</a>";
    var patients = Model.Patients.Select(x => linkTemplate
                        .Replace("TLink", Url.Action("Details", "Patients", new { Id = x.Id }))
                        .Replace("TName", x.Name))
                        .ToList();
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Number)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Number)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hospital)
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Hospitals" asp-action="Details" asp-route-id="@Model.HospitalId">
                @Html.DisplayFor(model => model.Hospital.Name)
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patients)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(string.Join(", ", patients))
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
